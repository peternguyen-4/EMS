<Window x:Class="EMS.Views.AddSpeciesDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Species Data" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Date:"/>
            <DatePicker x:Name="DatePickerInput" SelectedDate="{Binding date}" Width="200"/>

            <TextBlock Text="Species:"/>
            <ComboBox x:Name="SpeciesComboBox" Width="250"/>

            <TextBlock Text="Population Count:" Margin="0,6,0,0"/>
            <TextBox x:Name="PopulationTextBox" Width="100"/>

            <TextBlock Text="Scat Count:" Margin="0,6,0,0"/>
            <TextBox x:Name="ScatTextBox" Width="100"/>

            <TextBlock Text="Reproductive Factor:" Margin="0,6,0,0"/>
            <TextBox x:Name="ReproductiveFactorTextBox" Width="100"/>

            <TextBlock Text="Known Habitats:" Margin="0,6,0,0"/>
            <TextBox x:Name="HabitatsTextBox" Width="250"/>

            <TextBlock Text="Health Concerns:" Margin="0,6,0,0"/>
            <TextBox x:Name="HealthTextBox" Width="250"/>

            <TextBlock Text="Additional Notes:" Margin="0,6,0,0"/>
            <TextBox x:Name="NotesTextBox" Width="250"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="0,0,8,0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
