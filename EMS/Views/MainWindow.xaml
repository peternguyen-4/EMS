<Window x:Class="EMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EMS"
        mc:Ignorable="d"
        Title="Environment Management System" Height="640" Width="900" MinHeight="500" MinWidth="700"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="Soil Management" Grid.Row="0" Margin="5" Click="BtnSoil_Click"/>
            <Button Content="Water Management" Grid.Row="1" Margin="5" Click="BtnWater_Click"/>
            <Button Content="Species Management" Grid.Row="2" Margin="5" Click="BtnSpecies_Click"/>
            <Button Content="Add Notification" Grid.Row="3" Margin="5" Click="BtnNotifications_Click"/>
            <Button Content="Add Task" Grid.Row="4" Margin="5" Click="BtnTasks_Click"/>
            <Button Content="Export Data" Grid.Row="5" Margin="5" Click="BtnExport_Click"/>
            <Button Content="User Details" Grid.Row="6" Margin="5" Click="BtnUserDetails_Click"/>
            <Button Content="Logout" Grid.Row="7" Margin="5" Click="BtnLogout_Click"/>
        </Grid>

        <TextBlock x:Name="txtWelcome" Grid.Row="0" Grid.Column="1" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" TextWrapping="Wrap"/>

        <DataGrid x:Name="dgNotifications" Grid.Row="1" Grid.Column="1" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,5" MouseDoubleClick="dgNotifications_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Notification" Binding="{Binding title}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding creationDate}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="dgTasks" Grid.Row="2" Grid.Column="1" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,5,0,0" MouseDoubleClick="dgTasks_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Task" Binding="{Binding title}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding creationDate}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
