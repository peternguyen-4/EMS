<Window x:Class="EMS.Views.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detail" Height="350" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{Binding title}" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="{Binding creationDate, StringFormat='Created: {0:yyyy-MM-dd}'}" FontStyle="Italic"/>
        </StackPanel>

        <TextBox Grid.Row="1" Text="{Binding description, Mode=OneWay}" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Terminate" Width="90" Margin="0,0,8,0" Click="TerminateButton_Click"/>
            <Button Content="Close" Width="70" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
