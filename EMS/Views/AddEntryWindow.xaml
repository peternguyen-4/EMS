<Window x:Class="EMS.Views.AddEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Entry" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Title:"/>
            <TextBox x:Name="TitleTextBox" Width="350"/>
            <TextBlock Text="Description:" Margin="0,10,0,0"/>
            <TextBox x:Name="DescriptionTextBox" Width="350" Height="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Width="80" Margin="0,0,8,0" Click="AddButton_Click"/>
            <Button Content="Cancel" Width="70" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
